<div class="search_area">
  <%=form_with url: search_result_path, local: false, method: :get do |f| %>
    <%= f.label :search_email,"検索フォーム" %><br>
    <%=f.email_field :search_email, :size =>"30", placeholder: "メールアドレスを入力してください", class: "search_field" %>
    <%=f.submit '検索', class: "btn btn-success"%>
  <%end%>
</div>