<div class="flash_message">
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
</div>

<div class="work_show_page">
  <h2><%=@work.name %></h2>

  <%unless @work.content.blank?%>
  <div class="content_area">
    <h5>作業内容</h5>
    <p><%=@work.content%></p>
  </div>
  <%end%>

  <div class="time_area">
    <h5>日時</h5>
    <p><%=l @work.start_date, format: :short%>
    <span>~</span>
    <%=l @work.end_date, format: :short%></p>
  </div>

  <%if @personnels.blank?%>
    <h2>⚠️予定人数が設定されていません</h2>
  <%else%>
    <table class="table text-center table-bordered">
      <thead class="table-dark">
        <th>会社名</th>
        <th>予定人数</th>
      </thead>
      <tbody>
         <% @personnels.each do |personnel| %>
          <tr>
            <td><%=personnel.company_name%></td>
            <td><%=personnel.count %>人</td>
          </tr>
        <%end%>
      </tbody>
    </table>
  <%end%>
  <%if @site.user_id == current_user.id && @work.work_started?(@work)%>
    <div>
      <%=link_to '作業内容を編集', edit_site_work_path(@site, @work), id: "edit_link"%>
    </div>
  <%elsif @site.user_id == current_user.id%>
    <h4 class="not_edit_message"><i class="fa-solid fa-lock"></i>編集できません</h4>
  <%end%>

</div>