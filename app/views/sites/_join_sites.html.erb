<% join_sites.each do |site| %>
  <%=link_to site_works_path(site), class: 'tab_content' do%>

    <div>
      <%= image_tag site.user.get_profile_image, class: 'tab_user_profile_image' %>
    </div>

    <div class="tab_content_names">
      <h2><%= site.name %></h2>
      <p><%= site.description %></p>
    </div>

  <%end%>
<%end%>