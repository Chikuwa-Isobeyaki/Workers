<% followers.each do |user| %>
  <%=link_to user_path(user), class: 'follow_tab_content' do%>
　   <div>
      <%= image_tag user.get_profile_image, class: 'tab_user_profile_image' %>
    </div>
    <div class="tab_content_names">
      <h2><%= user.get_full_name(user) %></h2>
      <p><%= user.company_name %></p>
    </div>
  <%end%>
<%end%>

<%if followers.blank?%>
  <h2 class="follow_index_message"><i class="fa-solid fa-users"></i>フォロワーはいません</h2>
<%end%>
